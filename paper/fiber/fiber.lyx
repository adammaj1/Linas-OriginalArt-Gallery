\begin_layout Itemize
Electrodynamics was Maxwell's equations
\begin_inset Formula 
\[
\vec{\nabla}\cdot\vec{E}=4\pi\rho\quad\vec{\nabla}\times\vec{B}=4\pi\vec{j}\quad\vec{\nabla}\cdot\vec{B}=0\quad\vec{\nabla}\times\vec{E}=0
\]

\end_inset


\end_layout

\begin_layout Itemize
Gravitation was Einstein's equations
\begin_inset Formula 
\[
R_{\mu\nu}-\frac{1}{2}g_{\mu\nu}R-\Lambda g_{\mu\nu}=8\pi T_{\mu\nu}
\]

\end_inset


\end_layout

\begin_layout Itemize
Quantum electrodynamics was just-plain complicated.
\end_layout

\begin_layout Itemize
Superconductivity was the Ginzberg Landau equations
\begin_inset Formula 
\[
\mathcal{L}=\alpha\left|\phi\right|^{2}+\beta\left|\phi\right|^{4}+\frac{1}{2m}\left|\left(-i\hbar\vec{\nabla}-2e\vec{A}\right)\phi\right|^{2}+\frac{\left|\vec{B}\right|^{2}}{2}
\]

\end_inset


\end_layout

