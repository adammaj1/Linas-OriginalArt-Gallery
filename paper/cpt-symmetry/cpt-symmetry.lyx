\end_layout

\begin_layout Itemize
Generators 
\begin_inset Formula $\gamma_{a}$
\end_inset

 with index 
\begin_inset Formula $1\le a\le q$
\end_inset

 with 
\begin_inset Formula $\gamma_{a}^{2}=I$
\end_inset


\end_layout

\begin_layout Itemize
Generators 
\begin_inset Formula $\gamma_{a}$
\end_inset

 with index 
\begin_inset Formula $q<a\le p+q$
\end_inset

 with 
\begin_inset Formula $\gamma_{a}^{2}=i^{2}$
\end_inset


\end_layout

